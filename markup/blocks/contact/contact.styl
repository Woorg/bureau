.contact
	padding-top 34px
	+below($mobile)
		display none
	&__top
		@extends .in
		text-align center
	&__title
		margin-bottom 8px
		letter-spacing tracking(100)

	&__text
		margin-bottom 30px
	&__body
		background-color #f7f6f3
	&__in
		@extends .in
		padding-top 85px
		padding-bottom 60px
		+below($tablet)
			padding-top 40px
			padding-bottom 30px

.font
	.contact__title
		font normal 40px/1 $intro
		+below($desktop)
			font-size 33px
			text-align center
		+below($tablet)
			text-align left
	.contact__text
		font normal 30px/36px $metapro-normal
		+below($desktop)
			font-size 25px
			text-align center
		+below($tablet)
			text-align left



.form
	margin 0 auto 68px
	width 898px
	+below($tablet)
		width auto
	&__title
		margin-bottom 30px
		font normal 30px/1 $intro
		+below($mobile)
			font-size 18px
	&__row
		margin-bottom 55px
		cf()
		+below($mobile)
			margin-bottom 10px
	&__input-w
		border-bottom 1px solid #937540
		margin-right 28px
		width 202px
		float left
		+below($tablet)
			margin-bottom 10px
			width 100%
		label
			margin-bottom 4px
			display block
			color #000
			cursor pointer
			+below($mobile)
				margin-bottom 8px
		&:last-child
			margin-right 0
	&__input-w_wide
		width 436px
		+below($tablet)
			width 100%
	&__input
		border none
		width 100%
		height 42px
		background transparent
		font normal 18px/1 $metapro-normal
	&__textarea-w
		border-bottom 1px solid #937540
		margin-bottom 4px
		width 100%

		label
			margin-bottom -2px
			display block
			text-align center
			cursor pointer
			+below($tablet)
				text-align left
			+below($mobile)
				margin-bottom 8px
	&__textarea
		border none
		width 100%
		min-height 40px
		background transparent
		resize vertical
		font normal 18px/1 $metapro-normal
		+below($mobile)
			min-height 70px
	&__button
		text-align center
	&__submit
		@extends .button
		border none
		padding-top 12px
		padding-left 118px
		padding-bottom 16px
		padding-right 118px
		background-color #e9962a
		&:hover
			background-color darken(#e9962a, 10)
		+below($mobile)
			padding-left 0
			padding-right 0

.form
	label
		font bold 18px/1 $metapro-bld

.popup
	.form__input-w
		width 434px
		+below($tablet)
			width 100%
		label
			+below($mobile)
				font-size 14px
	.form__input
		background #FFF
	.form__textarea
		background #FFF
		min-height 100px
	.form__textarea-w
		label
			margin-bottom 4px
			+below($mobile)
				font-size 14px
